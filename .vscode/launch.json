  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug backend: Python Debugger",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app.main:app", "--reload", "--host", "0.0.0.0"],
      "cwd": "${workspaceFolder}/back",
      "envFile": "${workspaceFolder}/.env",
      "console": "internalConsole"
    },
    {
      "name": "Debug Backend Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests"],
      "cwd": "${workspaceFolder}/back",
      "console": "internalConsole"
    },
    {
      "name": "Frontend: Run with NPM (dev)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/front",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "internalConsole"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Frontend: Launch Chrome against http://localhost:5173",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/front"
    }
  ]
}
